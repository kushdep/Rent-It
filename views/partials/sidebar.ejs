<div
  class="sidebar-wrapper d-flex flex-column align-items-start h-100 px-2 py-4"
>
  <div
    class="nav flex-column nav-pills w-100 p-3 shadow rounded-4 bg-white sidebar-nav"
    id="v-pills-tab"
    role="tablist"
    aria-orientation="vertical"
  >
    <% for(let btnSt of buttonValues) { %>
    <a
      href="/<%=id %>/<%=role%>/<%=btnSt%>"
      class="nav-link sidebar-btn mb-2 w-100 text-start <%= activeBtn === btnSt ? 'active' : '' %>"
      style="font-size: 1.08rem"
    >
      <i class="bi bi-chevron-right me-2"></i><%= btnSt %>
    </a>
    <% } %>
  </div>
</div>
<style>
  .sidebar-nav {
    min-width: 180px;
    width: 100%;
    background: #fff;
    border-radius: 1rem;
  }
  .nav-pills .nav-link.sidebar-btn {
    background: #f8f9fa;
    color: #198754;
    border-radius: 0.8rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    box-shadow: 0 1px 4px rgba(25, 135, 84, 0.03);
    padding: 0.75rem 1.2rem;
    letter-spacing: 0.5px;
    border: none;
    outline: none;
    text-align: left;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }
  .nav-pills .nav-link.sidebar-btn.active,
  .nav-pills .nav-link.sidebar-btn:focus,
  .nav-pills .nav-link.sidebar-btn:hover {
    background: #198754 !important;
    color: #fff !important;
    box-shadow: 0 2px 12px #19875433;
    transform: translateX(4px) scale(1.04);
    text-decoration: none;
  }
  .nav-pills .nav-link.sidebar-btn[disabled] {
    opacity: 0.6;
    cursor: not-allowed;
    background: #f1f1f1 !important;
    color: #adb5bd !important;
  }
  @media (max-width: 768px) {
    .sidebar-wrapper {
      min-width: 100px;
      max-width: 100vw;
      border-radius: 0.8rem;
      padding: 0.5rem 0.2rem;
    }
    .sidebar-nav {
      min-width: 100px;
      padding: 1rem 0.5rem;
    }
    .nav-pills .nav-link.sidebar-btn {
      font-size: 0.98rem;
      padding: 0.5rem 0.7rem;
    }
  }
</style>
