<% layout('layouts/boilerplate') %>
<div class="container mt-5">
  <h1 class="text-center mb-4">Explore Rental Locations</h1>
  <div class="row g-4">
    <% for(let loc of rentLoc) { %>
    <div class="col-md-6 col-lg-4">
      <div class="position-relative overflow-hidden rounded shadow-lg">
        <img
          src="<%= loc.image %>"
          alt="<%= loc.title %>"
          class="img-fluid w-100"
          style="height: 250px; object-fit: cover;"
        />
        <div class="position-absolute bottom-0 start-0 w-100 p-3 text-white" style="background: rgba(0, 0, 0, 0.6);">
          <h5 class="mb-1"><%= loc.title %></h5>
          <p class="mb-1">$<%= loc.price %>/night</p>
          <a href="/rentloc/<%= loc._id %>" class="btn btn-sm btn-light">View Details</a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>