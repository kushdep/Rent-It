<% layout('layouts/boilerplate.ejs') %>

<div class="container mt-5">
  <div class="row">
    <!-- Rental Details Section -->
    <div class="col-md-6">
      <div class="card shadow-lg border-0">
        <img
          src="<%= rentPlace.image %>"
          class="card-img-top rounded-top"
          alt="<%= rentPlace.title %>"
          style="height: 300px; object-fit: cover"
        />
        <div class="card-body text-center">
          <h3 class="card-title mb-3"><%= rentPlace.title %></h3>
          <p class="card-text text-muted"><%= rentPlace.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <strong>Location:</strong> <%= rentPlace.location %>
          </li>
          <li class="list-group-item">
            <strong>Author:</strong> <%= rentPlace.author.username %>
          </li>
          <li class="list-group-item">
            <strong>Price:</strong> $<%= rentPlace.price %>/night
          </li>
        </ul>
        <% if (currentUser && rentPlace.author.equals(currentUser._id)) { %>
        <div class="card-body d-flex justify-content-between">
          <a
            href="/rentloc/<%= rentPlace.id %>/edit"
            class="btn btn-info btn-sm"
            >Edit</a
          >
          <form
            action="/rentloc/<%= rentPlace.id %>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
        <% } %>
        <div class="card-footer text-muted text-center">
          <small>Posted 2 Days Ago</small>
        </div>
      </div>
    </div>

    <!-- Review Section -->
    <div class="col-md-6">
      <h4 class="mb-4 text-center">Leave a Review</h4>
      <form
        action="/rentloc/<%= rentPlace.id %>/review"
        method="POST"
        class="validated-form mb-4"
        novalidate
      >
        <div class="mb-3">
          <div class="ms-l">
            <strong>Rating:</strong> <span id="ratingValue">3</span> ⭐
          </div>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            id="rating"
            oninput="document.getElementById('ratingValue').innerText = this.value"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
            placeholder="Write your review here..."
            required
          ></textarea>
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <button class="btn btn-success w-100">Submit</button>
      </form>

      <!-- Display Reviews in a Grid -->
      <h4 class="mb-4 text-center">Reviews</h4>
      <div class="row g-3">
        <% for (let review of rentPlace.reviews) { %>
        <div class="col-md-6">
          <div class="card shadow-sm h-100 border-0">
            <div class="card-body">
              <h5 class="card-title">Rating: <%= review.rating %> ⭐</h5>
              <p class="card-subtitle text-muted mb-2">
                By <%= review.author.username %>
              </p>
              <p class="card-text"><%= review.body %></p>
              <% if (currentUser && rentPlace.author.equals(currentUser._id)) {
              %>
              <form
                action="/rentloc/<%= rentPlace.id %>/review/<%= review._id %>?_method=DELETE"
                method="POST"
              >
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
